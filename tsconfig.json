{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compileOnSave": false,
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017", "ESNext.asynciterable", "ESNext.AsyncIterable", "ESNext.Promise", "ESNext.BigInt", "ESNext.Intl"],
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@config/*": ["./src/config"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"],
      "@routes/*": ["./src/routes/*"],
      "@models/*": ["./src/models/*"],
      "@constants/*": ["./src/constants/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@exceptions/*": ["./src/exceptions/*"],
      "@middlewares/*": ["./src/middlewares/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".env"],
  "exclude": ["node_modules", "src/http", "src/logs", "src/tests", "src/customTypes/*"]
}
